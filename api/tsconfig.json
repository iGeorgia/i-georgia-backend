{
  "compilerOptions": {
    "allowJs": false,
    "declaration": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": false,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@types": [
        "src/types"
      ]
    },
    "outDir": "build",
    "removeComments": true,
    "skipLibCheck": false,
    "sourceMap": false,
    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
