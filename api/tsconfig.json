{
  "compilerOptions": {
    "incremental": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@lib/*": [
        "./src/lib/*"
      ]
    },
    "lib": [
      "esnext"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": false
  },
  "exclude": [
    "node_modules"
  ]
}
